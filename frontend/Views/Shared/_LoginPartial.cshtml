@using Microsoft.AspNetCore.Identity
@using frontend.Areas.Identity.Data

@inject SignInManager<frontendUser> SignInManager
@inject UserManager<frontendUser> UserManager

<ul class="navbar-nav flex-row gap-3 align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="Identity"
               asp-page="/Account/Manage/Index"
               class="!rounded-button bg-primary text-white px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors whitespace-nowrap">
                @UserManager.GetUserName(User)
            </a>
        </li>
        <li class="nav-item">
            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                  class="m-0 p-0">
                <button type="submit"
                        class="!rounded-button bg-white text-gray-700 border border-gray-300 px-4 py-2 text-sm font-medium hover:bg-gray-50 transition-colors whitespace-nowrap">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-area="Identity"
               asp-page="/Account/Login"
               class="!rounded-button bg-white text-gray-700 border border-gray-300 px-4 py-2 text-sm font-medium hover:bg-gray-50 transition-colors whitespace-nowrap mr-2">
                Login
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity"
               asp-page="/Account/Register"
               class="!rounded-button bg-primary text-white px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors whitespace-nowrap">
                Sign Up
            </a>
        </li>
    }
</ul>
