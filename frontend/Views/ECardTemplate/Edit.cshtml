@{
}
@model frontend.Models.ECardTemplate

@{
    ViewData["Title"] = "Edit Template - E-Greeting";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex items-center mb-6">
        <a asp-action="Index" class="text-primary hover:text-primary/80 mr-2">
            <div class="w-5 h-5 flex items-center justify-center">
                <i class="ri-arrow-left-line"></i>
            </div>
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Edit Template</h1>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <input type="hidden" asp-for="TemplateId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="mb-6">
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-2">Template Title</label>
                    <input asp-for="Title" class="w-full px-4 py-2 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" />
                    <span asp-validation-for="Title" class="text-sm text-red-500"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="w-full px-4 py-2 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-sm text-red-500"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700 mb-2">Image URL</label>
                    <input asp-for="ImageUrl" class="w-full px-4 py-2 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" />
                    <span asp-validation-for="ImageUrl" class="text-sm text-red-500"></span>
                </div>

                <div class="mb-6 md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea asp-for="Description" rows="4" class="w-full px-4 py-2 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"></textarea>
                    <span asp-validation-for="Description" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div class="flex justify-end space-x-3">
                <a asp-action="Index" class="!rounded-button bg-white border border-gray-300 text-gray-700 px-4 py-2 text-sm font-medium hover:bg-gray-50 transition-colors">Cancel</a>
                <button type="submit" class="!rounded-button bg-primary text-white px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
