@{
    ViewData["Title"] = "Contact Us - E-Greeting";
}

<!-- Hero Section -->
<section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-cover bg-center"
         style="background-image: url('https://readdy.ai/api/search-image?query=A%20modern%2C%20elegant%20customer%20support%20or%20contact%20center%20with%20soft%20lighting.%20The%20scene%20shows%20a%20clean%2C%20minimalist%20workspace%20with%20people%20helping%20customers.%20Professional%2C%20high-quality%20digital%20illustration%20with%20a%20clean%2C%20minimalist%20aesthetic%20and%20soft%20pastel%20colors.&width=1920&height=1080&seq=11&orientation=landscape');">
        <div class="absolute inset-0 bg-gradient-to-r from-white via-white/90 to-transparent"></div>
    </div>
    <div class="container mx-auto px-4 py-20 md:py-32 relative">
        <div class="max-w-2xl">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Get in Touch</h1>
            <p class="text-lg md:text-xl text-gray-700 mb-8">Have questions or feedback? We're here to help. Reach out to our team and we'll get back to you as soon as possible.</p>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <div class="flex flex-col lg:flex-row gap-12">
                <!-- Contact Form -->
                <div class="lg:w-2/3">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">Send Us a Message</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <div class="w-5 h-5 flex items-center justify-center text-green-500">
                                        <i class="ri-check-line"></i>
                                    </div>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium">@TempData["SuccessMessage"]</p>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-controller="Contact" asp-action="SubmitForm" method="post" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
                                <input type="text" id="name" name="Name" required
                                       class="w-full px-4 py-3 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                                <input type="email" id="email" name="Email" required
                                       class="w-full px-4 py-3 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                            </div>
                        </div>
                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                            <input type="text" id="subject" name="Subject" required
                                   class="w-full px-4 py-3 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                        </div>
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Your Message</label>
                            <textarea id="message" name="Message" rows="6" required
                                      class="w-full px-4 py-3 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"></textarea>
                        </div>
                        <div>
                            <button type="submit"
                                    class="!rounded-button bg-primary text-white px-6 py-3 text-base font-medium hover:bg-primary/90 transition-colors whitespace-nowrap flex items-center justify-center">
                                <span>Send Message</span>
                                <div class="w-5 h-5 ml-2 flex items-center justify-center">
                                    <i class="ri-send-plane-line"></i>
                                </div>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Contact Info -->
                <div class="lg:w-1/3">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">Contact Information</h2>
                    <div class="space-y-8">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Us</h3>
                            <div class="flex items-start">
                                <div class="w-5 h-5 flex-shrink-0 flex items-center justify-center text-primary mt-1">
                                    <i class="ri-mail-line"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-gray-700">support@e-greeting.com</p>
                                    <p class="text-gray-500 text-sm mt-1">For general inquiries</p>
                                </div>
                            </div>
                            <div class="flex items-start mt-3">
                                <div class="w-5 h-5 flex-shrink-0 flex items-center justify-center text-primary mt-1">
                                    <i class="ri-mail-line"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-gray-700">business@e-greeting.com</p>
                                    <p class="text-gray-500 text-sm mt-1">For business partnerships</p>
                                </div>
                            </div>
                        </div>

                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Call Us</h3>
                            <div class="flex items-start">
                                <div class="w-5 h-5 flex-shrink-0 flex items-center justify-center text-primary mt-1">
                                    <i class="ri-phone-line"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-gray-700">+1 (555) 123-4567</p>
                                    <p class="text-gray-500 text-sm mt-1">Mon-Fri, 9am-5pm EST</p>
                                </div>
                            </div>
                        </div>

                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Visit Us</h3>
                            <div class="flex items-start">
                                <div class="w-5 h-5 flex-shrink-0 flex items-center justify-center text-primary mt-1">
                                    <i class="ri-map-pin-line"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-gray-700">123 Greeting Street</p>
                                    <p class="text-gray-700">Suite 456</p>
                                    <p class="text-gray-700">New York, NY 10001</p>
                                </div>
                            </div>
                        </div>

                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Follow Us</h3>
                            <div class="flex space-x-4">
                                <a href="#"
                                   class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-primary hover:text-white transition-colors">
                                    <i class="ri-facebook-fill"></i>
                                </a>
                                <a href="#"
                                   class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-primary hover:text-white transition-colors">
                                    <i class="ri-twitter-x-fill"></i>
                                </a>
                                <a href="#"
                                   class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-primary hover:text-white transition-colors">
                                    <i class="ri-instagram-fill"></i>
                                </a>
                                <a href="#"
                                   class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-primary hover:text-white transition-colors">
                                    <i class="ri-pinterest-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
                <p class="text-lg text-gray-600">Find quick answers to common questions about our platform</p>
            </div>

            <div class="space-y-6">
                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">How do I create my first e-card?</h3>
                    <p class="text-gray-600">Creating your first e-card is simple! Browse our template library, select a design you like, customize it with your message and images, and send it to your recipient's email or schedule it for later delivery.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">What payment methods do you accept?</h3>
                    <p class="text-gray-600">We accept all major credit cards (Visa, Mastercard, American Express), PayPal, and Apple Pay. All payments are processed securely through our payment partners.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Can I cancel my subscription?</h3>
                    <p class="text-gray-600">Yes, you can cancel your subscription at any time from your account settings. Your subscription will remain active until the end of your current billing period.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">How do I track if my e-card was opened?</h3>
                    <p class="text-gray-600">Premium and Business subscribers can track when their e-cards are opened. Simply go to your "Sent Cards" section in your dashboard to see delivery and open status for each card.</p>
                </div>
            </div>

            <div class="text-center mt-10">
                <p class="text-gray-600 mb-4">Still have questions? Check out our comprehensive help center.</p>
                <a href="#" class="!rounded-button bg-white border border-gray-300 text-gray-700 px-6 py-3 font-medium hover:bg-gray-50 transition-colors whitespace-nowrap inline-flex items-center">
                    <span>Visit Help Center</span>
                    <div class="w-5 h-5 ml-2 flex items-center justify-center">
                        <i class="ri-arrow-right-line"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <div class="bg-gray-200 rounded-lg overflow-hidden h-96">
                <!-- This would be replaced with an actual map integration -->
                <div class="w-full h-full flex items-center justify-center">
                    <div class="text-center">
                        <div class="w-12 h-12 mx-auto rounded-full bg-primary/10 flex items-center justify-center mb-4">
                            <div class="w-6 h-6 flex items-center justify-center text-primary">
                                <i class="ri-map-pin-line"></i>
                            </div>
                        </div>
                        <p class="text-gray-600">Map integration would be displayed here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<partial name="_NewsletterPartial" />
