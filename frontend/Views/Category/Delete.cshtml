@{
}
@model frontend.Models.Category

@{
    ViewData["Title"] = "Delete Category - E-Greeting";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex items-center mb-6">
        <a asp-action="Index" class="text-primary hover:text-primary/80 mr-2">
            <div class="w-5 h-5 flex items-center justify-center">
                <i class="ri-arrow-left-line"></i>
            </div>
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Delete Category</h1>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="w-5 h-5 flex items-center justify-center text-red-500">
                        <i class="ri-error-warning-line"></i>
                    </div>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-700">
                        Are you sure you want to delete this category? This action cannot be undone.
                    </p>
                </div>
            </div>
        </div>

        <div class="mb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Category Details</h3>
            <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Name</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Name</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Template Count</dt>
                    <dd class="mt-1 text-sm text-gray-900">@(Model.Templates?.Count ?? 0)</dd>
                </div>
            </dl>
        </div>

        @if (Model.Templates != null && Model.Templates.Any())
        {
            <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <div class="w-5 h-5 flex items-center justify-center text-yellow-500">
                            <i class="ri-error-warning-line"></i>
                        </div>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            Warning: This category contains @Model.Templates.Count templates. Deleting this category may affect these templates.
                        </p>
                    </div>
                </div>
            </div>
        }

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div class="flex justify-end space-x-3">
                <a asp-action="Index" class="!rounded-button bg-white border border-gray-300 text-gray-700 px-4 py-2 text-sm font-medium hover:bg-gray-50 transition-colors">Cancel</a>
                <button type="submit" class="!rounded-button bg-red-600 text-white px-4 py-2 text-sm font-medium hover:bg-red-700 transition-colors">Delete</button>
            </div>
        </form>
    </div>
</div>
