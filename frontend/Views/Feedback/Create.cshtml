@{
}
@model frontend.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback - E-Greeting";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex items-center mb-6">
        <a asp-action="Index" class="text-primary hover:text-primary/80 mr-2">
            <div class="w-5 h-5 flex items-center justify-center">
                <i class="ri-arrow-left-line"></i>
            </div>
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Create Feedback</h1>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-6">
                <label asp-for="UserId" class="block text-sm font-medium text-gray-700 mb-2">User</label>
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="w-full px-4 py-2 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-2">Feedback Message</label>
                <textarea asp-for="Message" rows="5" class="w-full px-4 py-2 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"></textarea>
                <span asp-validation-for="Message" class="text-sm text-red-500"></span>
            </div>

            <div class="flex justify-end space-x-3">
                <a asp-action="Index" class="!rounded-button bg-white border border-gray-300 text-gray-700 px-4 py-2 text-sm font-medium hover:bg-gray-50 transition-colors">Cancel</a>
                <button type="submit" class="!rounded-button bg-primary text-white px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
