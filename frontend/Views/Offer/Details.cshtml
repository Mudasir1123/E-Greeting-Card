@model frontend.Models.Offer

@{
    ViewData["Title"] = "Offer Details - E-Greeting";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex items-center mb-6">
        <a asp-action="Index" class="text-primary hover:text-primary/80 mr-2">
            <div class="w-5 h-5 flex items-center justify-center">
                <i class="ri-arrow-left-line"></i>
            </div>
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Offer Details</h1>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="mb-6">
            <div class="flex space-x-3 mb-6">
                <a asp-action="Edit" asp-route-id="@Model.OfferId" class="!rounded-button bg-primary text-white px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors flex items-center">
                    <div class="w-4 h-4 mr-2 flex items-center justify-center">
                        <i class="ri-edit-line"></i>
                    </div>
                    <span>Edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@Model.OfferId" class="!rounded-button bg-white border border-red-500 text-red-500 px-4 py-2 text-sm font-medium hover:bg-red-50 transition-colors flex items-center">
                    <div class="w-4 h-4 mr-2 flex items-center justify-center">
                        <i class="ri-delete-bin-line"></i>
                    </div>
                    <span>Delete</span>
                </a>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-2">@Model.Title</h2>
                <div class="flex items-center mb-2">
                    <span class="text-lg font-bold text-primary">@Model.DiscountPercentage% OFF</span>
                    @if (Model.IsActive)
                    {
                        <span class="ml-3 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Active
                        </span>
                    }
                    else
                    {
                        <span class="ml-3 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                            Inactive
                        </span>
                    }
                </div>
                <p class="text-gray-600 mb-4">@Model.Description</p>
                <div class="text-sm text-gray-500">
                    Valid from @Model.StartDate.ToString("MMMM dd, yyyy") to @Model.EndDate.ToString("MMMM dd, yyyy")
                </div>
            </div>

            <h3 class="text-lg font-medium text-gray-900 mb-3">Subscriptions Using This Offer</h3>

            @if (Model.Subscriptions != null && Model.Subscriptions.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    User
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Start Date
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    End Date
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var subscription in Model.Subscriptions)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @* <div class="text-sm font-medium text-gray-900">@subscription.User.Email</div> *@
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">@subscription.StartDate.ToString("MMM dd, yyyy")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">@subscription.EndDate.ToString("MMM dd, yyyy")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (subscription.IsActive)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                                Inactive
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="bg-gray-50 rounded-lg p-6 text-center">
                    <div class="w-16 h-16 mx-auto rounded-full bg-gray-200 flex items-center justify-center mb-4">
                        <div class="w-8 h-8 flex items-center justify-center text-gray-400">
                            <i class="ri-user-line"></i>
                        </div>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No subscriptions found</h3>
                    <p class="text-gray-600">This offer is not currently used by any subscriptions.</p>
                </div>
            }
        </div>
    </div>
</div>
