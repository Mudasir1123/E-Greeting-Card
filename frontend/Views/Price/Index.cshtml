@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Billing toggle
            const billingToggle = document.getElementById('billingToggle');
            const premiumPrice = document.getElementById('premiumPrice');
            const premiumBillingPeriod = document.getElementById('premiumBillingPeriod');
            const businessPrice = document.getElementById('businessPrice');
            const businessBillingPeriod = document.getElementById('businessBillingPeriod');

            billingToggle.addEventListener('change', function() {
                if (this.checked) {
                    // Annual pricing (20% discount)
                    premiumPrice.innerHTML = '$124.70<span class="text-base font-normal text-gray-500">/year</span>';
                    premiumBillingPeriod.textContent = 'Billed annually (save 20%)';
                    businessPrice.innerHTML = '$287.90<span class="text-base font-normal text-gray-500">/year</span>';
                    businessBillingPeriod.textContent = 'Billed annually (save 20%)';
                } else {
                    // Monthly pricing
                    premiumPrice.innerHTML = '$12.99<span class="text-base font-normal text-gray-500">/month</span>';
                    premiumBillingPeriod.textContent = 'Billed monthly';
                    businessPrice.innerHTML = '$29.99<span class="text-base font-normal text-gray-500">/month</span>';
                    businessBillingPeriod.textContent = 'Billed monthly';
                }
            });

            // FAQ toggles
            const faqToggles = document.querySelectorAll('.faq-toggle');

            faqToggles.forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('.faq-icon i');

                    // Close all other FAQs
                    document.querySelectorAll('.faq-content').forEach(item => {
                        if (item !== content) {
                            item.classList.remove('active');
                            const otherIcon = item.previousElementSibling.querySelector('.faq-icon i');
                            otherIcon.classList.remove('ri-subtract-line');
                            otherIcon.classList.add('ri-add-line');
                        }
                    });

                    // Toggle current FAQ
                    content.classList.toggle('active');

                    if (content.classList.contains('active')) {
                        icon.classList.remove('ri-add-line');
                        icon.classList.ad  {
                        icon.classList.remove('ri-add-line');
                        icon.classList.add('ri-subtract-line');
                    } else {
                        icon.classList.remove('ri-subtract-line');
                        icon.classList.add('ri-add-line');
                    }
                });
            });
        });
    </script>
