@model frontend.Models.Subscription
@{
    ViewData["Title"] = "Edit Subscription | E-Greeting Card Platform";
    Layout = "_AdminLayout";
}

<!-- Breadcrumbs & Page Title -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <div class="flex items-center text-sm text-gray-500 mb-2">
            <a asp-controller="Admin" asp-action="Dashboard" class="hover:text-primary">Dashboard</a>
            <div class="w-4 h-4 flex items-center justify-center mx-1">
                <i class="ri-arrow-right-s-line"></i>
            </div>
            <span class="text-gray-700">Subscriptions</span>
        </div>
        <h1 class="text-2xl font-bold text-gray-900">Edit Subscription</h1>
    </div>
    <a asp-action="Index" class="mt-3 sm:mt-0 px-4 py-2 bg-primary text-white rounded-button text-sm font-medium hover:bg-primary/90 whitespace-nowrap flex items-center">
        <div class="w-4 h-4 flex items-center justify-center mr-2">
            <i class="ri-add-line"></i>
        </div>
        Back
    </a>
</div>

<div class="container-fluid mt-5">
    <input type="hidden" asp-for="SubscriptionId" />
    <form asp-action="Edit" method="post" asp-controller="Subscription">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="space-y-4">
            <div>
                <label asp-for="EmailList" class="block text-sm font-medium text-gray-700 mb-1">Email List</label>
                <input asp-for="EmailList" class="w-full px-3 py-2 border border-gray-300 rounded-button text-sm focus:outline-none focus:ring-2 focus:ring-primary/20" placeholder="Enter email addresses, comma-separated">
                <span asp-validation-for="EmailList" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                <input asp-for="StartDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-button text-sm focus:outline-none focus:ring-2 focus:ring-primary/20">
                <span asp-validation-for="StartDate" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                <input asp-for="EndDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-button text-sm focus:outline-none focus:ring-2 focus:ring-primary/20">
                <span asp-validation-for="EndDate" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="IsActive" class="block text-sm font-medium text-gray-700 mb-1">Is Active</label>
                <input asp-for="IsActive" type="checkbox" class="rounded-button text-sm">
            </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
            <button type="submit" class="px-4 py-2 bg-primary text-white rounded-button text-sm font-medium hover:bg-primary/90 whitespace-nowrap">Update Subscription</button>
        </div>
    </form>
</div>
