<!-- Search and Filters -->
<div class="mb-6 bg-white rounded shadow p-4">
    <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
        <div class="relative flex-1">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="ri-search-line text-gray-400"></i>
            </div>
            <input type="text" id="search-templates" placeholder="Search templates..." class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary">
        </div>

        <div class="flex space-x-2">
            <div class="relative">
                <select id="category-filter" class="appearance-none flex items-center justify-between w-40 px-4 py-2 bg-white border border-gray-300 rounded text-sm font-medium text-gray-700 whitespace-nowrap">
                    <option value="">All Categories</option>
                    <option value="Birthday">Birthday</option>
                    <option value="Wedding">Wedding</option>
                    <option value="Thank You">Thank You</option>
                    <option value="Holiday">Holiday</option>
                    <option value="Anniversary">Anniversary</option>
                    <option value="Baby">Baby</option>
                    <option value="Graduation">Graduation</option>
                    <option value="Sympathy">Sympathy</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                    <i class="ri-arrow-down-s-line text-gray-400"></i>
                </div>
            </div>

            <div class="relative">
                <select id="sort-filter" class="appearance-none flex items-center justify-between w-32 px-4 py-2 bg-white border border-gray-300 rounded text-sm font-medium text-gray-700 whitespace-nowrap">
                    <option value="latest">Latest</option>
                    <option value="oldest">Oldest</option>
                    <option value="name-asc">Name A-Z</option>
                    <option value="name-desc">Name Z-A</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                    <i class="ri-arrow-down-s-line text-gray-400"></i>
                </div>
            </div>

            <div class="flex border border-gray-300 rounded overflow-hidden">
                <button id="grid-view" class="w-10 h-10 flex items-center justify-center bg-primary text-white">
                    <i class="ri-layout-grid-line"></i>
                </button>
                <button id="list-view" class="w-10 h-10 flex items-center justify-center bg-white text-gray-500">
                    <i class="ri-list-check"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Filter Chips -->
    <div id="filter-chips" class="mt-4 flex flex-wrap gap-2">
        <button class="inline-flex items-center px-3 py-1 bg-primary bg-opacity-10 text-primary text-sm font-medium rounded-full whitespace-nowrap">
            <span>Birthday</span>
            <div class="w-4 h-4 flex items-center justify-center ml-1">
