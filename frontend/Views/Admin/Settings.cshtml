
}
@{
    ViewData["Title"] = "Settings";
    Layout = "_AdminLayout";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">Settings</h1>
            <p class="mt-1 text-sm text-gray-500">Manage your platform settings and configurations.</p>
        </div>
    </div>

    <!-- Settings Tabs -->
    <div class="bg-white rounded-lg shadow">
        <div class="border-b border-gray-200">
            <nav class="flex -mb-px overflow-x-auto" aria-label="Settings tabs">
                <button class="tab-button active whitespace-nowrap py-4 px-6 border-b-2 border-primary text-primary font-medium text-sm" data-tab="general">
                    <div class="flex items-center">
                        <i class="ri-settings-4-line mr-2"></i>
                        General
                    </div>
                </button>
                <button class="tab-button whitespace-nowrap py-4 px-6 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm" data-tab="account">
                    <div class="flex items-center">
                        <i class="ri-user-settings-line mr-2"></i>
                        Account
                    </div>
                </button>
                <button class="tab-button whitespace-nowrap py-4 px-6 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm" data-tab="email">
                    <div class="flex items-center">
                        <i class="ri-mail-settings-line mr-2"></i>
                        Email
                    </div>
                </button>
                <button class="tab-button whitespace-nowrap py-4 px-6 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm" data-tab="payment">
                    <div class="flex items-center">
                        <i class="ri-bank-card-line mr-2"></i>
                        Payment
                    </div>
                </button>
                <button class="tab-button whitespace-nowrap py-4 px-6 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm" data-tab="security">
                    <div class="flex items-center">
                        <i class="ri-shield-keyhole-line mr-2"></i>
                        Security
                    </div>
                </button>
                <button class="tab-button whitespace-nowrap py-4 px-6 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm" data-tab="integrations">
                    <div class="flex items-center">
                        <i class="ri-plug-line mr-2"></i>
                        Integrations
                    </div>
                </button>
                <button class="tab-button whitespace-nowrap py-4 px-6 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm" data-tab="appearance">
                    <div class="flex items-center">
                        <i class="ri-palette-line mr-2"></i>
                        Appearance
                    </div>
                </button>
            </nav>
        </div>

        <!-- Tab Content -->
        <div class="p-6">
            <!-- General Settings -->
            <div id="general" class="tab-content active">
                <div class="space-y-6">
                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Site Information</h3>
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                            <div>
                                <label for="site-name" class="block text-sm font-medium text-gray-700">Site Name</label>
                                <input type="text" id="site-name" name="site-name" value="E-Greeting Cards" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="site-url" class="block text-sm font-medium text-gray-700">Site URL</label>
                                <input type="text" id="site-url" name="site-url" value="https://egreetingcards.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="admin-email" class="block text-sm font-medium text-gray-700">Admin Email</label>
                                <input type="email" id="admin-email" name="admin-email" value="admin@egreetingcards.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="timezone" class="block text-sm font-medium text-gray-700">Timezone</label>
                                <select id="timezone" name="timezone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    <option value="UTC">UTC</option>
                                    <option value="EST" selected>Eastern Time (EST)</option>
                                    <option value="CST">Central Time (CST)</option>
                                    <option value="MST">Mountain Time (MST)</option>
                                    <option value="PST">Pacific Time (PST)</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Content Settings</h3>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Enable User-Generated Content</h4>
                                    <p class="text-sm text-gray-500">Allow users to create and share their own card designs</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Content Moderation</h4>
                                    <p class="text-sm text-gray-500">Automatically moderate user-generated content</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Allow Public Sharing</h4>
                                    <p class="text-sm text-gray-500">Let users share cards on social media</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div>
                                <label for="max-upload-size" class="block text-sm font-medium text-gray-700">Maximum Upload Size (MB)</label>
                                <input type="number" id="max-upload-size" name="max-upload-size" value="10" min="1" max="50" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">SEO Settings</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="meta-title" class="block text-sm font-medium text-gray-700">Default Meta Title</label>
                                <input type="text" id="meta-title" name="meta-title" value="E-Greeting Cards | Send Beautiful Digital Cards" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="meta-description" class="block text-sm font-medium text-gray-700">Default Meta Description</label>
                                <textarea id="meta-description" name="meta-description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">Create and send beautiful digital greeting cards for any occasion. Choose from hundreds of templates or create your own custom design.</textarea>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Enable Sitemap</h4>
                                    <p class="text-sm text-gray-500">Automatically generate and update sitemap.xml</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-end">
                        <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Cancel
                        </button>
                        <button type="button" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div id="account" class="tab-content hidden">
                <div class="space-y-6">
                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">User Account Settings</h3>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Allow User Registration</h4>
                                    <p class="text-sm text-gray-500">Enable new user registrations</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Email Verification</h4>
                                    <p class="text-sm text-gray-500">Require email verification for new accounts</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Allow Social Login</h4>
                                    <p class="text-sm text-gray-500">Enable login with social media accounts</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Password Policy</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="min-password-length" class="block text-sm font-medium text-gray-700">Minimum Password Length</label>
                                <input type="number" id="min-password-length" name="min-password-length" value="8" min="6" max="20" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Require Special Characters</h4>
                                    <p class="text-sm text-gray-500">Passwords must include special characters</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Require Numbers</h4>
                                    <p class="text-sm text-gray-500">Passwords must include at least one number</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div>
                                <label for="password-expiry" class="block text-sm font-medium text-gray-700">Password Expiry (days)</label>
                                <input type="number" id="password-expiry" name="password-expiry" value="90" min="0" max="365" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                <p class="mt-1 text-xs text-gray-500">Set to 0 for no expiration</p>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-end">
                        <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Cancel
                        </button>
                        <button type="button" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>

            <!-- Email Settings -->
            <div id="email" class="tab-content hidden">
                <div class="space-y-6">
                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Email Provider</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="email-provider" class="block text-sm font-medium text-gray-700">Provider</label>
                                <select id="email-provider" name="email-provider" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    <option value="smtp" selected>SMTP</option>
                                    <option value="sendgrid">SendGrid</option>
                                    <option value="mailchimp">Mailchimp</option>
                                    <option value="aws-ses">Amazon SES</option>
                                </select>
                            </div>
                            <div>
                                <label for="smtp-host" class="block text-sm font-medium text-gray-700">SMTP Host</label>
                                <input type="text" id="smtp-host" name="smtp-host" value="smtp.example.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="smtp-port" class="block text-sm font-medium text-gray-700">SMTP Port</label>
                                <input type="number" id="smtp-port" name="smtp-port" value="587" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="smtp-username" class="block text-sm font-medium text-gray-700">SMTP Username</label>
                                <input type="text" id="smtp-username" name="smtp-username" value="user@example.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div>
                                <label for="smtp-password" class="block text-sm font-medium text-gray-700">SMTP Password</label>
                                <input type="password" id="smtp-password" name="smtp-password" value="••••••••••••" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Use SSL/TLS</h4>
                                    <p class="text-sm text-gray-500">Enable secure connection</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div>
                                <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                    <i class="ri-mail-send-line mr-2"></i>
                                    Send Test Email
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Email Templates</h3>
                        <div class="space-y-4">
                            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                                <div class="bg-white p-4 rounded-md border border-gray-200">
                                    <h4 class="text-sm font-medium text-gray-900">Welcome Email</h4>
                                    <p class="text-xs text-gray-500 mt-1">Sent when a new user registers</p>
                                    <div class="mt-3 flex justify-end">
                                        <button type="button" class="text-primary text-sm hover:text-primary-dark">Edit Template</button>
                                    </div>
                                </div>
                                <div class="bg-white p-4 rounded-md border border-gray-200">
                                    <h4 class="text-sm font-medium text-gray-900">Password Reset</h4>
                                    <p class="text-xs text-gray-500 mt-1">Sent when a user requests a password reset</p>
                                    <div class="mt-3 flex justify-end">
                                        <button type="button" class="text-primary text-sm hover:text-primary-dark">Edit Template</button>
                                    </div>
                                </div>
                                <div class="bg-white p-4 rounded-md border border-gray-200">
                                    <h4 class="text-sm font-medium text-gray-900">Card Received</h4>
                                    <p class="text-xs text-gray-500 mt-1">Sent when a user receives a card</p>
                                    <div class="mt-3 flex justify-end">
                                        <button type="button" class="text-primary text-sm hover:text-primary-dark">Edit Template</button>
                                    </div>
                                </div>
                                <div class="bg-white p-4 rounded-md border border-gray-200">
                                    <h4 class="text-sm font-medium text-gray-900">Subscription Confirmation</h4>
                                    <p class="text-xs text-gray-500 mt-1">Sent when a user subscribes to a plan</p>
                                    <div class="mt-3 flex justify-end">
                                        <button type="button" class="text-primary text-sm hover:text-primary-dark">Edit Template</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-end">
                        <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Cancel
                        </button>
                        <button type="button" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>

            <!-- Payment Settings -->
            <div id="payment" class="tab-content hidden">
                <div class="space-y-6">
                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Payment Gateways</h3>
                        <div class="space-y-4">
                            <div class="bg-white p-4 rounded-md border border-gray-200">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 flex items-center justify-center bg-blue-100 rounded-md">
                                            <i class="ri-stripe-line text-blue-600 text-xl"></i>
                                        </div>
                                        <div class="ml-3">
                                            <h4 class="text-sm font-medium text-gray-900">Stripe</h4>
                                            <p class="text-xs text-gray-500">Credit card payments</p>
                                        </div>
                                    </div>
                                    <label class="switch">
                                        <input type="checkbox" checked>
                                        <span class="slider"></span>
                                    </label>
                                </div>
                                <div class="mt-4 space-y-3">
                                    <div>
                                        <label for="stripe-public-key" class="block text-sm font-medium text-gray-700">Public Key</label>
                                        <input type="text" id="stripe-public-key" name="stripe-public-key" value="pk_test_51H..." class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    </div>
                                    <div>
                                        <label for="stripe-secret-key" class="block text-sm font-medium text-gray-700">Secret Key</label>
                                        <input type="password" id="stripe-secret-key" name="stripe-secret-key" value="sk_test_51H..." class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <h4 class="text-sm font-medium text-gray-900">Test Mode</h4>
                                            <p class="text-sm text-gray-500">Use Stripe test environment</p>
                                        </div>
                                        <label class="switch">
                                            <input type="checkbox" checked>
                                            <span class="slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-white p-4 rounded-md border border-gray-200">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 flex items-center justify-center bg-blue-100 rounded-md">
                                            <i class="ri-paypal-line text-blue-600 text-xl"></i>
                                        </div>
                                        <div class="ml-3">
                                            <h4 class="text-sm font-medium text-gray-900">PayPal</h4>
                                            <p class="text-xs text-gray-500">PayPal payments</p>
                                        </div>
                                    </div>
                                    <label class="switch">
                                        <input type="checkbox">
                                        <span class="slider"></span>
                                    </label>
                                </div>
                                <div class="mt-4 space-y-3">
                                    <div>
                                        <label for="paypal-client-id" class="block text-sm font-medium text-gray-700">Client ID</label>
                                        <input type="text" id="paypal-client-id" name="paypal-client-id" value="" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    </div>
                                    <div>
                                        <label for="paypal-secret" class="block text-sm font-medium text-gray-700">Secret</label>
                                        <input type="password" id="paypal-secret" name="paypal-secret" value="" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <h4 class="text-sm font-medium text-gray-900">Sandbox Mode</h4>
                                            <p class="text-sm text-gray-500">Use PayPal sandbox environment</p>
                                        </div>
                                        <label class="switch">
                                            <input type="checkbox" checked>
                                            <span class="slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-md">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Currency Settings</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="default-currency" class="block text-sm font-medium text-gray-700">Default Currency</label>
                                <select id="default-currency" name="default-currency" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                                    <option value="USD" selected>US Dollar (USD)</option>
                                    <option value="EUR">Euro (EUR)</option>
                                    <option value="GBP">British Pound (GBP)</option>
                                    <option value="CAD">Canadian Dollar (CAD)</option>
                                    <option value="AUD">Australian Dollar (AUD)</option>
                                </select>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Allow Multiple Currencies</h4>
                                    <p class="text-sm text-gray-500">Let users pay in their local currency</p>
                                </div>
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-end">
                        <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Cancel
                        </button>
                        <button type="button" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>

