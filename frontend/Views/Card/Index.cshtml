@model IEnumerable<frontend.Models.ECardTemplate>
@{
    ViewData["Title"] = "My Cards - E-Greeting";
}

<!-- Main Content -->
<main class="container mx-auto px-4 py-8 min-h-[calc(100vh-64px-300px)]">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">My Cards</h1>
            <p class="text-gray-600">Manage all your created greeting cards</p>
        </div>
        @* <a href="#" class="!rounded-button bg-primary text-white px-5 py-2.5 text-sm font-medium hover:bg-primary/90 transition-colors whitespace-nowrap flex items-center mt-4 md:mt-0"> *@
        @*     <div class="w-5 h-5 mr-2 flex items-center justify-center"> *@
        @*         <i class="ri-add-line"></i> *@
        @*     </div> *@
        @*     <span>Create New Card</span> *@
        @* </a> *@
    </div>

    <!-- Filters and Search -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-8">
        <div class="flex flex-col space-y-4">
            <!-- Status Tabs -->
            <div class="flex overflow-x-auto pb-2">
                <div class="inline-flex p-1 bg-gray-100 rounded-full">
                    <button class="px-6 py-2 rounded-full bg-white shadow-sm text-gray-900 font-medium whitespace-nowrap">All Cards</button>
                    <button class="px-6 py-2 rounded-full text-gray-600 hover:text-gray-900 whitespace-nowrap">Sent</button>
                    <button class="px-6 py-2 rounded-full text-gray-600 hover:text-gray-900 whitespace-nowrap">Scheduled</button>
                    <button class="px-6 py-2 rounded-full text-gray-600 hover:text-gray-900 whitespace-nowrap">Draft</button>
                </div>
            </div>

            <!-- Search and Sort -->
            <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
                <div class="relative flex-grow">
                    <input type="text" placeholder="Search your cards..." class="w-full pl-10 pr-4 py-2.5 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm">
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 flex items-center justify-center text-gray-400">
                        <i class="ri-search-line"></i>
                    </div>
                </div>

                <div class="flex space-x-4">
                    <div class="relative">
                        <button class="flex items-center space-x-2 bg-white border border-gray-300 rounded-button px-4 py-2.5 text-gray-700 hover:bg-gray-50 whitespace-nowrap text-sm">
                            <span>Sort by: Date</span>
                            <div class="w-4 h-4 flex items-center justify-center">
                                <i class="ri-arrow-down-s-line"></i>
                            </div>
                        </button>
                    </div>

                    <div class="relative">
                        <button class="flex items-center space-x-2 bg-white border border-gray-300 rounded-button px-4 py-2.5 text-gray-700 hover:bg-gray-50 whitespace-nowrap text-sm">
                            <span>Filter</span>
                            <div class="w-4 h-4 flex items-center justify-center">
                                <i class="ri-filter-3-line"></i>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-lg shadow-sm overflow-hidden group hover:shadow-md transition-shadow">
                <div class="relative aspect-[4/3] overflow-hidden">
                    <img src="~/uploads/@item.ImageUrl" alt="@item.Title" class="w-full h-full object-cover object-top transition-transform duration-300 group-hover:scale-105">
                    <div class="absolute top-2 right-2 bg-white/90 rounded-full p-1.5 opacity-0 group-hover:opacity-100 transition-opacity">
                        <div class="w-5 h-5 flex items-center justify-center text-gray-700 hover:text-primary">
                            <i class="ri-heart-line"></i>
                        </div>
                    </div>
                </div>
                <div class="p-4">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="font-medium text-gray-900">@item.Title</h3>
                        @* <span class="text-sm font-medium text-primary">$2.99</span> <!-- You can replace this with actual pricing if needed --> *@
                    </div>
                    <div class="flex items-center text-sm text-gray-500 mb-3">
                        <div class="w-4 h-4 flex items-center justify-center mr-1">
                            <i class="ri-star-fill text-yellow-400"></i>
                        </div>
                        <span>4.8 (124 reviews)</span> <!-- Replace with actual dynamic data if needed -->
                    </div>
                    <div class="flex flex-wrap gap-2 mb-4">
                        <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded-full">@item.Category?.Name</span>
                    </div>
                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.TemplateId" class="w-full !rounded-button bg-primary/10 text-primary px-4 py-2 text-sm font-medium hover:bg-primary/20 transition-colors whitespace-nowrap" title="View & Send">
                        Send Now
                    </a>
                </div>
            </div>
        }
    </div>
