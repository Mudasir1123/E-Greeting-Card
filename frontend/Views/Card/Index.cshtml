<!-- Empty State (Hidden by default) -->
<div class="hidden container mx-auto px-4 py-16 text-center">
    <div class="max-w-md mx-auto">
        <div class="w-32 h-32 mx-auto mb-6 bg-primary/10 rounded-full flex items-center justify-center">
            <div class="w-16 h-16 flex items-center justify-center text-primary">
                <i class="ri-mail-open-line ri-3x"></i>
            </div>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-3">No cards yet</h2>
        <p class="text-gray-600 mb-8">You haven't created any greeting cards yet. Start by creating your first card.</p>
        <a href="#" class="!rounded-button bg-primary text-white px-6 py-3 text-base font-medium hover:bg-primary/90 transition-colors whitespace-nowrap inline-flex items-center">
            <div class="w-5 h-5 mr-2 flex items-center justify-center">
                <i class="ri-add-line"></i>
            </div>
            <span>Create Your First Card</span>
        </a>
    </div>
</div>

<!-- Delete Confirmation Modal (Hidden by default) -->
<div id="delete-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <div class="text-center mb-6">
            <div class="w-16 h-16 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
                <div class="w-8 h-8 flex items-center justify-center text-red-500">
                    <i class="ri-delete-bin-line ri-xl"></i>
                </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Delete Card?</h3>
            <p class="text-gray-600">Are you sure you want to delete this card? This action cannot be undone.</p>
        </div>
        <div class="flex space-x-3">
            <button id="cancel-delete" class="flex-1 !rounded-button bg-white border border-gray-300 text-gray-700 px-4 py-2.5 font-medium hover:bg-gray-50 transition-colors whitespace-nowrap">Cancel</button>
            <button id="confirm-delete" class="flex-1 !rounded-button bg-red-500 text-white px-4 py-2.5 font-medium hover:bg-red-600 transition-colors whitespace-nowrap">Delete</button>
        </div>
    </div>
</div>

<!-- Schedule Modal (Hidden by default) -->
<div id="schedule-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-bold text-gray-900">Schedule Delivery</h3>
            <button id="close-schedule" class="w-8 h-8 rounded-full hover:bg-gray-100 flex items-center justify-center text-gray-500">
                <i class="ri-close-line"></i>
            </button>
        </div>
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Delivery Date</label>
            <input type="date" class="w-full px-4 py-2.5 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
        </div>
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Delivery Time</label>
            <input type="time" class="w-full px-4 py-2.5 rounded-button border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
        </div>
        <div class="mb-6">
            <label class="flex items-center">
                <input type="checkbox" class="custom-checkbox mr-2">
                <span class="text-sm text-gray-700">Send me a confirmation when delivered</span>
            </label>
        </div>
        <div class="flex space-x-3">
            <button id="cancel-schedule" class="flex-1 !rounded-button bg-white border border-gray-300 text-gray-700 px-4 py-2.5 font-medium hover:bg-gray-50 transition-colors whitespace-nowrap">Cancel</button>
            <button id="confirm-schedule" class="flex-1 !rounded-button bg-primary text-white px-4 py-2.5 font-medium hover:bg-primary/90 transition-colors whitespace-nowrap">Schedule</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Card hover actions
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                const actions = card.querySelector('.card-actions');
                card.addEventListener('mouseenter', () => {
                    actions.style.opacity = '1';
                });
                card.addEventListener('mouseleave', () => {
                    actions.style.opacity = '0';
                });
            });

            // Delete modal functionality
            const deleteButtons = document.querySelectorAll('.card .ri-delete-bin-line').forEach(btn => {
                btn.closest('button').addEventListener('click', () => {
                    document.getElementById('delete-modal').classList.remove('hidden');
                });
            });

            document.getElementById('cancel-delete').addEventListener('click', () => {
                document.getElementById('delete-modal').classList.add('hidden');
            });

            document.getElementById('confirm-delete').addEventListener('click', () => {
                // Add delete functionality here
                document.getElementById('delete-modal').classList.add('hidden');
            });

            // Schedule modal functionality (for demonstration)
            document.getElementById('cancel-schedule').addEventListener('click', () => {
                document.getElementById('schedule-modal').classList.add('hidden');
            });

            document.getElementById('close-schedule').addEventListener('click', () => {
                document.getElementById('schedule-modal').classList.add('hidden');
            });

            document.getElementById('confirm-schedule').addEventListener('click', () => {
                // Add scheduling functionality here
                document.getElementById('schedule-modal').classList.add('hidden');
            });
        });
    </script>
}
